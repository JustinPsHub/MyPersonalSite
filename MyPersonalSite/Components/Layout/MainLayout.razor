@inherits LayoutComponentBase

<div class="app-shell">
    <header class="site-header">
        <div class="site-header-inner">
            <div class="header-left">
                <button class="btn btn-outline-primary btn-sm menu-toggle"
                        type="button"
                        data-bs-toggle="offcanvas"
                        data-bs-target="#siteMenu"
                        aria-controls="siteMenu"
                        aria-label="Open navigation menu">
                    <span class="menu-icon" aria-hidden="true">â˜°</span>
                    <span class="menu-label">Menu</span>
                </button>

                <a class="site-title text-decoration-none fw-semibold" href="/">Justin Palmer</a>
            </div>
        </div>
    </header>

    <main class="app-main">
        <div class="page">
            @Body
        </div>
    </main>

    <button class="nav-overlay" data-nav-close aria-label="Close menu"></button>
</div>

<div class="offcanvas offcanvas-start offcanvas-menu"
     tabindex="-1"
     id="siteMenu"
     aria-labelledby="siteMenuLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="siteMenuLabel">Menu</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close menu"></button>
    </div>
    <div class="offcanvas-body">
        <NavMenu />
    </div>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">Close</span>
</div>
