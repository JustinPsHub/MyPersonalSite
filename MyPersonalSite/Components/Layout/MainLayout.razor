@inherits LayoutComponentBase

<header class="topbar d-flex px-2 align-items-center gap-2">
    <button type="button"
            class="btn btn-outline-secondary btn-sm nav-toggle-top"
            data-nav-toggle
            aria-controls="appSidebar"
            aria-expanded="false"
            aria-label="Open menu">
        ☰
    </button>

    <a class="text-decoration-none fw-bold" href="/">Justin Palmer</a>
</header>

<div class="app">
    <div class="nav-host">
        <NavMenu />
    </div>

    <main class="flex-fill push-target">
     
            @Body
    
    </main>

    <button class="nav-overlay" data-nav-close aria-label="Close menu"></button>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
