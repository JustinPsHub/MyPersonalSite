@inherits LayoutComponentBase

<div class="app">
    <div class="nav-host">
        <NavMenu IsOpen="_navOpen" OnClose="CloseNav" />
    </div>

    <main class="flex-fill">
        <!-- Mobile toggle button -->
    @*     <button class="nav-toggle d-lg-none"
                @onclick="ToggleNav"
                aria-controls="appSidebar"
                aria-expanded="@_navOpen">
            ☰ Menu
        </button> *@

        <div class="page">
            @Body
        </div>
    </main>

    <!-- Dim overlay when drawer is open -->
    <button class="nav-overlay @( _navOpen ? "show" : null )"
            @onclick="CloseNav"
            aria-label="Close menu"></button>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

@code {
    private bool _navOpen;

    [Inject] NavigationManager Nav { get; set; } = default!;

    void ToggleNav() => _navOpen = !_navOpen;
    void CloseNav() => _navOpen = false;

    protected override void OnInitialized()
    {
        // Auto-close drawer after navigation
        Nav.LocationChanged += (_, __) =>
        {
            _navOpen = false;
            InvokeAsync(StateHasChanged);
        };
    }
}
