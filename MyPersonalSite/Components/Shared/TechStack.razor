@namespace MyPersonalSite.Components.Shared
@* Reusable chip grid. Use defaults or pass your own list via Items. *@
@code {
    [Parameter] public IEnumerable<string>? Items { get; set; }

    private static readonly string[] DefaultItems = new[]
    {
        "C# / .NET", "MVC", "ASP.NET Core Web API", "Blazor", "React",
        "Python", "Node.js", "RESTful Services", "Swagger", "OAuth/OpenID Connect",
        "Azure OpenAI", "RAG", "Azure Data Factory", "Azure Functions",
        "Azure SQL", "Azure Synapse dedicated pool", "Blob Storage", "Data Lake",
        "Tabular Models", "Power BI", "DAX", "Star Schema Design",
        "Azure DevOps", "CI/CD", "RLS", "Vulnerability scanning",
        "Azure networking", "Inbound/outbound controls", "PowerShell"
    };

    private IEnumerable<string> GetItems() => Items ?? DefaultItems;
}
<div class="d-flex flex-wrap gap-2 chips">
    @foreach (var t in GetItems())
    {
        <span class="chip">@t</span>
    }
</div>
