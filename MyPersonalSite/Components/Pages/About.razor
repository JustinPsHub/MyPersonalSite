@page "/about"
@inject NavigationManager Nav

<HeadContent>
    <meta name="robots" content="noindex, follow" />
    <link rel="canonical" href="@ToAbsolute("/")" />
</HeadContent>

<div class="container py-5">
    <p class="text-muted">This page has moved to the home page.</p>
    <a class="btn btn-primary" href="/">Go to Home</a>
</div>

@code {
    protected override void OnInitialized()
    {
        // Replace=true to update browser history and avoid back/forward loops
        Nav.NavigateTo("/", true);
    }

    private string ToAbsolute(string path) => $"{Nav.BaseUri.TrimEnd('/')}{path}";
}
