@rendermode InteractiveServer
@page "/resume"
@using System.Net.Http.Json
@using System.Text.RegularExpressions
@using MyPersonalSite.Shared.DTOs
@using MyPersonalSite.Shared.Models
@inject IHttpClientFactory HttpFactory
@inject NavigationManager Nav
@inject IJSRuntime JS
@using MyPersonalSite.Components.Shared

<PageTitle>Resume - Justin Palmer - Senior Cloud Engineer & Data Architect</PageTitle>

<!-- Quiet heading for a11y -->
<div class="container-fluid page-shell-wide pt-3">
    <h1 class="visually-hidden">Resume</h1>
    <meta itemprop="name" content="Justin Palmer" />
    <meta itemprop="email" content="justinraypalmer@gmail.com" />
</div>

<section class="container-fluid page-shell-wide resume-container">
    <div class="resume-inner">
        <!-- HEADER -->
        <header class="d-flex flex-column flex-md-row align-items-start align-items-md-center justify-content-between gap-2 mb-3 resume-header">
            <div>
                <h2 class="h3 mb-1" itemprop="name">Justin Palmer</h2>
                <div class="d-flex flex-wrap gap-2 mb-1">
                    <span class="chip" itemprop="jobTitle">Senior Cloud Engineer &amp; Data Architect</span>
                    <span class="chip">Azure Synapse / Data Factory</span>
                    <span class="chip">Azure OpenAI / RAG</span>
                    <link itemprop="url" href="@Nav.BaseUri" />
                </div>
                <p class="mb-0 text-muted small">
                    Senior Cloud Engineer &amp; Data Architect with 16+ years delivering enterprise data solutions
                    and 8+ years building Azure cloud platforms, governed analytics, and GenAI solutions with secure
                    networking, scalable APIs, and full-stack apps.
                </p>
            </div>

            <div class="d-flex flex-column align-items-stretch align-items-md-end gap-2">
                <div class="d-flex gap-2 align-items-center">
                    <details class="export-dd d-print-none">
                        <summary class="btn btn-outline-secondary btn-sm" aria-label="Export options">Export</summary>
                        <div class="menu">
                            <a class="dropdown-item"
                               href="/resume/jrp_resume_20260128.docx"
                               download
                               target="_blank"
                               rel="noopener"
                               data-close>
                                Word
                            </a>
                        </div>
                    </details>
                </div>

                <div class="d-flex flex-wrap gap-2 small text-muted">
                    <span class="chip">Hillsboro, Ohio</span>
                    <a class="chip" href="mailto:justinraypalmer@gmail.com" rel="noopener">justinraypalmer@gmail.com</a>
                    <a class="chip" href="tel:[redacted]">[redacted]</a>
                    <a class="chip" href="https://justinpalmer.com" target="_blank" rel="noopener">justinpalmer.com</a>
                </div>
            </div>
        </header>

        @if (!string.IsNullOrWhiteSpace(_error))
        {
            <div class="alert alert-danger" role="alert">
                <strong>Failed to load resume:</strong> @_error
            </div>
        }
        else if (_sections is null)
        {
            <p>Loading...</p>
        }
        else
        {
            <!-- ===================== 1-PAGE SUMMARY (Karl-inspired) ===================== -->
            <!-- Hidden on page; used by print/export -->
            <section id="resume-summary" class="d-none" itemscope itemtype="https://schema.org/Person">
                <header class="rs-header">
                    <div class="rs-nameblock">
                        <h1 class="rs-name">Justin Palmer</h1>
                        <div class="rs-role">Senior Cloud Engineer &amp; Data Architect</div>
                        <p class="rs-tag">
                            16+ years delivering Azure-native data platforms, Synapse + ADF pipelines, GenAI (Azure OpenAI RAG),
                            and secure API ecosystems with Blazor/MVC/React.
                        </p>
                    </div>
                    <div class="rs-contact">
                        Hillsboro, OH - <a href="mailto:justinraypalmer@gmail.com">justinraypalmer@gmail.com</a> - [redacted] - justinpalmer.com
                    </div>
                </header>

                <div class="rs-grid">
                    <!-- LEFT RAIL -->
                    <aside class="rs-left">
                        <section class="rs-block">
                            <h3 class="rs-label">Skills</h3>
                            <ul class="rs-list">
                                <li><strong>Cloud Data Architecture:</strong> Synapse Dedicated Pools, ADF, Azure SQL, Data Lake Gen2, Event Grid, Blob</li>
                                <li><strong>Full Stack:</strong> C#, ASP.NET Core, Blazor, MVC, React, Node.js, Python, REST, Swagger</li>
                                <li><strong>AI &amp; Automation:</strong> Azure OpenAI, RAG, Windsurf, Codex, ChatGPT Pro, PowerShell</li>
                                <li><strong>Security &amp; Networking:</strong> VNETs, Private Endpoints, inbound/outbound controls, Nexus</li>
                                <li><strong>DevOps &amp; Governance:</strong> Azure DevOps, IaC, RLS, Data Governance</li>
                            </ul>
                        </section>

                        <section class="rs-block">
                            <h3 class="rs-label">Certifications</h3>
                            <ul class="rs-list">
                                <li>Microsoft Certified: Azure AI Fundamentals (AI-900)</li>
                                <li>Microsoft Certified: Azure Data Fundamentals (DP-900)</li>
                                <li>Microsoft Certified: Azure Fundamentals (AZ-900)</li>
                            </ul>
                        </section>

                        <section class="rs-block">
                            <h3 class="rs-label">Education</h3>
                            @foreach (var ed in GetEducation(1))
                            {
                                <div class="rs-edu">
                                    <div class="rs-edu-title">@ed.Title</div>
                                    @if (!string.IsNullOrWhiteSpace(ed.Organization))
                                    {
                                        <div class="rs-edu-org">@ed.Organization</div>
                                    }
                                    <div class="rs-edu-dates">@FormatDateRange(ed.StartDate, ed.EndDate)</div>
                                </div>
                            }
                        </section>
                    </aside>

                    <!-- RIGHT MAIN -->
                    <main class="rs-right">
                        <section class="rs-block">
                            <h3 class="rs-label">Experience</h3>

                            @foreach (var ex in GetExperience(3))
                            {
                                <div class="rs-job">
                                    <div class="rs-job-head">
                                        <div>
                                            <div class="rs-job-title">@ex.Title</div>
                                            @if (!string.IsNullOrWhiteSpace(ex.Organization))
                                            {
                                                <div class="rs-job-org">@ex.Organization</div>
                                            }
                                        </div>
                                        <div class="rs-job-dates">@FormatDateRange(ex.StartDate, ex.EndDate)</div>
                                    </div>

                                    @if (!string.IsNullOrWhiteSpace(ex.Description))
                                    {
                                        <div class="rs-job-desc">@ex.Description</div>
                                    }

                                    @if (TakeBullets(ex, 3).Any())
                                    {
                                        <ul class="rs-bullets">
                                            @foreach (var p in TakeBullets(ex, 3))
                                            {
                                                <li>@p</li>
                                            }
                                        </ul>
                                    }
                                </div>
                            }
                        </section>

                        <section class="rs-block">
                            <h3 class="rs-label">Selected Impact</h3>
                            <ul class="rs-bullets">
                                <li>Azure OpenAI <strong>RAG</strong> observability agent for Power BI audit logs.</li>
                                <li>Human Capital <strong>Tabular Model</strong> with 25 fact tables and 90 dimensions.</li>
                                <li>Azure <strong>ADF</strong> pipelines and Functions with timer/HTTP triggers.</li>
                                <li>Secure API ecosystem with <strong>Swagger/OpenAPI</strong> documentation.</li>
                            </ul>
                        </section>
                    </main>
                </div>
            </section>
            <!-- =================== /1-PAGE SUMMARY =================== -->
            <!-- ===== TOP-OF-PAGE: Highlights -> Experience -> Education ===== -->
            <section class="mb-3" id="highlights">
                <h2 class="sect">Professional Profile</h2>
                <div class="exp">
                    <p class="mb-2">
                        Senior Cloud Engineer and Data Architect with over 16 years of experience delivering secure,
                        enterprise-scale data solutions. Specialized in architecting Azure-native Big Data pipelines,
                        governed analytics, and Generative AI solutions that democratize data access across complex
                        enterprise domains. Expert in AI-accelerated delivery with advanced agentic workflows
                        (Windsurf, Codex, ChatGPT Pro). Proven track record of designing secure network architectures
                        and API ecosystems in high-compliance federal sectors.
                    </p>
                </div>
            </section>

            <section class="mb-3" id="experience">
                <h2 class="sect">Professional Experience</h2>

                @foreach (var e in GetExperienceAll())
                {
                    var bullets = e.BulletPoints?.OrderBy(b => b.Order).Take(MaxBullets);
                    <article class="exp">
                        <div class="exp-head">
                            <div>
                                <div class="exp-title">@e.Title</div>
                                @if (!string.IsNullOrWhiteSpace(e.Organization))
                                {
                                    <div class="exp-sub">@e.Organization</div>
                                }
                                @if (!string.IsNullOrWhiteSpace(e.Location))
                                {
                                    <div class="text-muted small">@e.Location</div>
                                }
                            </div>
                            <div class="text-nowrap">
                                <span class="badge bg-primary-subtle text-primary">
                                    @FormatDateRange(e.StartDate, e.EndDate)
                                </span>
                            </div>
                        </div>

                        @if (!string.IsNullOrWhiteSpace(e.Description))
                        {
                            <p class="mb-2 small text-muted">@e.Description</p>
                        }

                        @if (bullets?.Any() == true)
                        {
                            <ul class="exp-bullets">
                                @foreach (var bp in bullets!)
                                {
                                    <li>@bp.Text</li>
                                }
                            </ul>
                        }
                    </article>
                }
            </section>

            <section class="mb-3" id="education">
                <h2 class="sect">Education</h2>

                @foreach (var ed in GetEducationAll())
                {
                    <article class="exp">
                        <div class="exp-head">
                            <div>
                                <div class="exp-title">@ed.Title</div>
                                @if (!string.IsNullOrWhiteSpace(ed.Organization))
                                {
                                    <div class="exp-sub">@ed.Organization</div>
                                }
                                @if (!string.IsNullOrWhiteSpace(ed.Location))
                                {
                                    <div class="text-muted small">@ed.Location</div>
                                }
                            </div>
                            <div class="text-nowrap">
                                <span class="badge bg-primary-subtle text-primary">
                                    @FormatDateRange(ed.StartDate, ed.EndDate)
                                </span>
                            </div>
                        </div>

                        @if (!string.IsNullOrWhiteSpace(ed.Description))
                        {
                            <p class="mb-2 small text-muted">@ed.Description</p>
                        }
                    </article>
                }
            </section>

            <!-- ===== BELOW THE FOLD: Skills, Certifications, Other DB-backed sections ===== -->
            <section class="mb-3" id="skills">
                <h2 class="sect">Technical Skills</h2>
                <div class="row g-2">
                    <div class="col-md-6">
                        <div class="tile h-100">
                            <div class="tile-title mb-1">Cloud Data Architecture</div>
                            <div class="chips">
                                @Chip("Azure Synapse (Dedicated Pools)") @Chip("Azure Data Factory")
                                @Chip("Azure SQL") @Chip("Data Lake Gen2")
                                @Chip("Event Grid") @Chip("Blob Storage")
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="tile h-100">
                            <div class="tile-title mb-1">Full-Stack Engineering</div>
                            <div class="chips">
                                @Chip("C#") @Chip("ASP.NET Core")
                                @Chip("Blazor") @Chip("React") @Chip("MVC")
                                @Chip("Node.js") @Chip("Python")
                                @Chip("REST API Design") @Chip("Swagger/OpenAPI")
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="tile h-100">
                            <div class="tile-title mb-1">AI &amp; Automation</div>
                            <div class="chips">
                                @Chip("Azure OpenAI Service") @Chip("RAG Patterns")
                                @Chip("AI-Augmented Dev (Windsurf, Codex, ChatGPT Pro)")
                                @Chip("PowerShell Automation")
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="tile h-100">
                            <div class="tile-title mb-1">Security &amp; Networking</div>
                            <div class="chips">
                                @Chip("Azure VNETs") @Chip("Private Endpoints")
                                @Chip("Inbound/Outbound Traffic Security")
                                @Chip("Vulnerability Management (Nexus)")
                                @Chip("OAuth/OIDC")
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="tile h-100">
                            <div class="tile-title mb-1">DevOps &amp; Governance</div>
                            <div class="chips">
                                @Chip("Azure DevOps (CI/CD)") @Chip("Infrastructure as Code (IaC)")
                                @Chip("Row-Level Security (RLS)") @Chip("Data Governance")
                            </div>
