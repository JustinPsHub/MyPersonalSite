@page "/resume"
@using System.Net.Http.Json
@using MyPersonalSite.Shared.Models
@inject IHttpClientFactory HttpFactory
@inject NavigationManager Nav

<h1 class="display-5 mb-3">Resume</h1>

@if (!string.IsNullOrWhiteSpace(_error))
{
    <div class="alert alert-danger" role="alert">
        <strong>Failed to load resume:</strong> @_error
    </div>
}
else if (_sections is null)
{
    <p>Loading…</p>
}
else if (_sections.Count == 0)
{
    <div class="alert alert-info">No resume data available yet.</div>
}
else
{
    @foreach (var s in _sections)
    {
        <section class="mb-4">
            <h3 class="h4 border-bottom pb-2">@s.SectionTitle</h3>

            @foreach (var e in s.Entries)
            {
                <article class="py-2">
                    <div class="d-flex flex-wrap align-items-baseline">
                        <strong class="me-2">@e.Title</strong>
                        @if (!string.IsNullOrWhiteSpace(e.Organization))
                        {
                            <span class="text-muted me-2">— @e.Organization</span>
                        }
                        <span class="badge bg-secondary">
                            @FormatDateRange(e.StartDate, e.EndDate)
                        </span>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(e.Location))
                    {
                        <div class="text-muted small">@e.Location</div>
                    }

                    @if (!string.IsNullOrWhiteSpace(e.Description))
                    {
                        <p class="mt-2 mb-1">@e.Description</p>
                    }

                    @if (e.BulletPoints is { Count: > 0 })
                    {
                        <ul class="mb-2">
                            @foreach (var bp in e.BulletPoints)
                            {
                                <li>@bp.Text</li>
                            }
                        </ul>
                    }
                </article>
            }
        </section>
    }
}

@code {
    private List<ResumeSection>? _sections;
    private string? _error;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            using var http = HttpFactory.CreateClient();

            // Build an absolute URI so this works during prerendering
            var uri = new Uri(new Uri(Nav.BaseUri), "api/resume/sections");

            _sections = await http.GetFromJsonAsync<List<ResumeSection>>(uri);
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
    }

    private static string FormatDateRange(DateTime start, DateTime? end)
    {
        var s = start.ToString("MMM yyyy");
        var e = end.HasValue ? end.Value.ToString("MMM yyyy") : "Present";
        return $"{s} — {e}";
    }
}
