@page "/Error"
@rendermode InteractiveServer
@using System.Diagnostics

<PageTitle>Error - Justin Palmer</PageTitle>

<div class="container-fluid page-shell">
    <div class="card p-4">
        <h1 class="h4 mb-2">Something went wrong</h1>
        <p class="mb-2">An error occurred while processing your request.</p>

        @if (ShowRequestId)
        {
            <p class="small text-muted">
                <strong>Request ID:</strong> <code>@RequestId</code>
            </p>
        }

        <div class="mt-3">
            <p class="small text-muted mb-1">Development mode guidance</p>
            <p class="small text-muted mb-0">
                Enable the Development environment locally to see more detailed error information.
                Avoid enabling it in production to prevent exposure of sensitive details.
            </p>
        </div>
    </div>
</div>

@code{
    [CascadingParameter]
    private HttpContext? HttpContext { get; set; }

    private string? RequestId { get; set; }
    private bool ShowRequestId => !string.IsNullOrEmpty(RequestId);

    protected override void OnInitialized() =>
        RequestId = Activity.Current?.Id ?? HttpContext?.TraceIdentifier;
}

