@page "/visuals"
@rendermode InteractiveServer
@using System.Net.Http.Json
@inject IHttpClientFactory HttpFactory
@inject NavigationManager Nav
@inject IJSRuntime JS

<h1 class="display-5 mb-3">Yearly Entries</h1>
<p class="text-muted">Counts of resume entries by start year (demo of .NET + EF Core + D3).</p>

@if (!string.IsNullOrWhiteSpace(_error))
{
    <div class="alert alert-danger"><strong>Error:</strong> @_error</div>
}
else if (_data is null)
{
    <p>Loading…</p>
}
else
{
    <div class="container">
        <div id="entries-per-year-chart" style="width:100%; max-width:900px;"></div>
    </div>
}

@code {
    private List<YearCount>? _data;
    private string? _error;
    private bool _chartRendered;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            using var http = HttpFactory.CreateClient();
            var uri = new Uri(new Uri(Nav.BaseUri), "api/metrics/entries-per-year");
            _data = await http.GetFromJsonAsync<List<YearCount>>(uri);
        }
        catch (Exception ex) { _error = ex.Message; }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (_chartRendered || _data is null) return;

        try
        {
            await JS.InvokeVoidAsync("d3Interop.renderBarChart",
                "#entries-per-year-chart",
                _data,
                new { height = 420 });
            _chartRendered = true;
        }
        catch (InvalidOperationException)
        {
            await Task.Delay(75);
            StateHasChanged(); // retry after interactivity
        }
    }

    private sealed class YearCount { public int year { get; set; } public int count { get; set; } }
}
